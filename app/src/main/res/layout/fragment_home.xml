<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.Dashboard.Fragments.HomeFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="350dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:background="@drawable/searchbar_shape"
        android:layout_marginTop="104dp"
        android:outlineAmbientShadowColor="@color/yellow"
        android:outlineSpotShadowColor="@color/yellow"
        android:textAppearance="@color/yellow"
        android:theme="@style/CustomSearchView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:queryBackground="@color/white"
        app:iconifiedByDefault="false"
        app:queryHint="Search Category"
        app:animateNavigationIcon="true"
        app:searchHintIcon="@null"
        app:closeIcon="@drawable/close"
        app:searchIcon="@drawable/search" />

</androidx.constraintlayout.widget.ConstraintLayout>